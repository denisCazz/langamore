---
import BaseLayout from "../../layouts/baseLayout.astro";

const pageMeta = {
	title: "Camere | LangAmore",
	description: "Tre camere dallo stile unico per vivere le Langhe con il comfort che desideri.",
	url: "https://langamorepollenzo.it/bedroom",
};

const rooms = [
	{
		title: "Camera Matrimoniale",
		description:
			"Una camera accogliente con letto matrimoniale, bagno privato e dettagli pensati per un soggiorno rilassante.",
		image: "/images/Camera_2/letto.jpg",
		link: "/bedroom/matrimoniale",
		accent: "Intimit√†",
	},
	{
		title: "Camera Deluxe",
		description:
			"Spazi generosi, area living e letto supplementare per famiglie o piccoli gruppi.",
		image: "/images/Camera_Deluxe/letto.jpg",
		link: "/bedroom/deluxe",
		accent: "Famiglie",
	},
	{
		title: "Camera Idro",
		description:
			"Vasca idromassaggio privata, cromoterapia e luci soffuse per un'esperienza romantica.",
		image: "/images/Camera_vasca_idro/letto3.jpg",
		link: "/bedroom/idro",
		accent: "Benessere",
	},
];

---

<BaseLayout title={pageMeta.title}>
	<Fragment slot="head">
		<meta name="description" content={pageMeta.description} />
		<meta property="og:url" content={pageMeta.url} />
	</Fragment>
	<main class="space-y-20 pb-20">
		<section class="section-wrapper space-y-8 text-center">
			<header class="section-header">
				<span class="chip">Camere</span>
				<h1 class="text-4xl font-semibold text-[var(--color-primary-dark)]">Le camere di LangAmore</h1>
				<p class="tagline mx-auto">{pageMeta.description}</p>
			</header>
		</section>

		<section class="section-wrapper grid-auto-fit">
			{rooms.map((room) => (
				<article class="floating-card space-y-4">
					<a href={room.link} class="block" title={room.title}>
						<div class="gradient-border">
							<img src={room.image} alt={room.title} class="w-full h-60 object-cover rounded-[22px]" loading="lazy" />
						</div>
					</a>
					<span class="chip">{room.accent}</span>
					<h2 class="text-2xl font-semibold text-[var(--color-primary-dark)]">
						<a href={room.link} title={room.title}>{room.title}</a>
					</h2>
					<p class="text-[var(--color-muted)] leading-7">{room.description}</p>
					<a href={room.link} class="btn btn-outline w-max" title={`Scopri ${room.title.toLowerCase()}`}>Scopri la camera</a>
				</article>
			))}
		</section>

		<section class="section-wrapper text-center space-y-6">
			<h2 class="text-3xl font-semibold text-[var(--color-primary-dark)]">Prenota il tuo soggiorno</h2>
			<p class="tagline mx-auto">
				Scegli la camera che meglio racconta il tuo viaggio nelle Langhe e blocca subito le date che preferisci.
			</p>
			<div class="flex justify-center gap-3 flex-wrap">
				<a href="/contact" class="btn btn-outline" title="Richiedi informazioni">Richiedi informazioni</a>
			</div>
		</section>
	</main>
</BaseLayout>
