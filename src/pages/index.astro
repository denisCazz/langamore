---
import BaseLayout from "../layouts/baseLayout.astro";
import Slider from "../components/slider.astro";
import IndexPresentation from "../components/indexPresentation.astro";

const pageMeta = {
	title: "Home | LangAmore Guest House",
	description:
		"Un indirizzo intimo e raffinato a pochi minuti da Alba e Bra per vivere le Langhe tra comfort e servizi su misura.",
	url: "https://langamorepollenzo.it/",
};

const imagesSrc = [
	"/images/pollenzo_view.jpeg",
	"/images/langhe/relax.jpeg",
	"/images/Locazione_turistica/divano.jpg"
];

const imagesAlt = [
	"Vista su Pollenzo",
	"Relax nelle Langhe",
	"Gli interni di LangAmore"
];

const benefits = [
	"Camere con vasca idromassaggio privata",
	"Colline UNESCO a due passi",
	"Esperienze su misura tra Langhe e Roero"
];


---

<BaseLayout title={pageMeta.title}>
	<Fragment slot="head">
		<meta name="description" content={pageMeta.description} />
		<meta property="og:url" content={pageMeta.url} />
	</Fragment>
	<main class="space-y-24 pb-20">
		<section class="section-wrapper hero-pattern">
			<div class="grid gap-12 lg:grid-cols-[minmax(0,1fr),minmax(0,1.1fr)] items-center">
				<div class="space-y-8">
					<span class="chip">Guest house a Pollenzo</span>
					<h1 class="text-4xl md:text-5xl font-semibold leading-tight text-[var(--color-primary-dark)]">
						LangAmore, il tuo rifugio di charme tra le colline delle Langhe
					</h1>
					<p class="tagline">{pageMeta.description}</p>
					<div class="flex flex-wrap gap-3">
						<a
							href="https://www.booking.com/hotel/it/langamore-guest-house.it.html"
							class="btn btn-primary"
							target="_blank"
							rel="noopener"
							title="Prenota LangAmore"
						>
							Prenota ora
						</a>
						<a href="/contact#richiesta" class="btn btn-outline" title="Richiedi disponibilità">Richiedi disponibilità</a>
					</div>
					<a href="/bedroom" class="text-sm font-semibold tracking-wide text-[var(--color-primary-dark)] inline-flex items-center gap-2" title="Scopri le camere">
						Scopri tutte le camere
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l5 5a1 1 0 010 1.414l-5 5a1 1 0 01-1.414-1.414L13.586 10H4a1 1 0 110-2h9.586l-3.293-3.293a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
					</a>
					<ul class="space-y-3">
						{benefits.map((benefit, index) => (
							<li class="list-step" data-index={`0${index + 1}`}>{benefit}</li>
						))}
					</ul>
				</div>

				<div class="relative">
					<div class="gradient-border">
						<div class="surface-card surface-card--accent">
							<Slider src={imagesSrc} alt={imagesAlt} />
						</div>
					</div>
					<div class="absolute -bottom-10 -left-6 hidden sm:flex gap-3 px-6 py-4 bg-white/85 backdrop-blur-lg rounded-2xl shadow-[0_18px_38px_rgba(48,34,21,0.18)]">
						<div class="flex flex-col">
							<span class="text-xs uppercase tracking-[0.28em] text-[var(--color-muted)]">Langhe</span>
							<span class="text-lg font-semibold text-[var(--color-primary-dark)]">Wine & Relax</span>
						</div>
						<span class="chip">Weekend romantici</span>
					</div>
				</div>
			</div>
		</section>

		<IndexPresentation />

		<section class="section-wrapper space-y-10">
			<header class="section-header">
				<span class="chip">Servizi selezionati</span>
				<h2 class="text-3xl md:text-4xl font-semibold">Esperienze pensate per te</h2>
				<p class="tagline mx-auto">
					Dalle degustazioni private ai tour esclusivi, LangAmore apre le porte delle Langhe più autentiche.
				</p>
			</header>

			<div class="grid-auto-fit">
				<div class="floating-card space-y-3">
					<span class="chip">Benessere</span>
					<h3 class="text-2xl font-semibold">Suite Idromassaggio</h3>
					<p class="text-[var(--color-muted)] leading-7">
						La nostra camera idro offre vasca privata, cromoterapia e un'ambientazione accogliente per un relax totale.
					</p>
					<a href="/bedroom/idro" class="btn btn-outline w-max" title="Camera idromassaggio">Scopri di più</a>
				</div>
				<div class="floating-card space-y-3">
					<span class="chip">Esperienze</span>
					<h3 class="text-2xl font-semibold">Tour nelle Langhe</h3>
					<p class="text-[var(--color-muted)] leading-7">
						Organizziamo degustazioni guidate, tour in Vespa e visite alle cantine storiche per farti vivere il territorio.
					</p>
					<a href="/services" class="btn btn-outline w-max" title="Servizi LangAmore">Tutti i servizi</a>
				</div>
				<div class="floating-card space-y-3">
					<span class="chip">Comfort</span>
					<h3 class="text-2xl font-semibold">Parcheggio privato</h3>
					<p class="text-[var(--color-muted)] leading-7">
						Accesso diretto con ascensore, parcheggio interno e supporto per arrivi serali su richiesta.
					</p>
					<a href="/contact" class="btn btn-outline w-max" title="Contatta LangAmore">Contattaci</a>
				</div>
			</div>
		</section>

		<section class="section-wrapper text-center space-y-6">
			<h2 class="text-3xl md:text-4xl font-semibold text-[var(--color-primary-dark)]">Pronto a vivere LangAmore?</h2>
			<p class="tagline mx-auto">
				Blocca ora le migliori date disponibili e lasciati accompagnare nel tuo viaggio nelle Langhe.
			</p>
			<div class="flex flex-wrap justify-center gap-3">
				<a
					href="https://www.booking.com/hotel/it/langamore-guest-house.it.html"
					class="btn btn-primary"
					target="_blank"
					rel="noopener"
					title="Prenota LangAmore"
				>
					Prenota ora
				</a>
				<a href="/contact#richiesta" class="btn btn-outline" title="Richiedi disponibilità">Richiedi disponibilità</a>
			</div>
		</section>
	</main>
</BaseLayout>
