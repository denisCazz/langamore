---
import BaseLayout from "../layouts/baseLayout.astro";

const pageMeta = {
	title: "Servizi | LangAmore",
	description: "Scopri le esperienze e i servizi esclusivi pensati per il tuo soggiorno a LangAmore.",
	url: "https://langamorepollenzo.it/services",
};

const services = [
	{
		title: "Campo da tennis privato",
		description: "Prenota il nostro campo in terra rossa circondato dal verde per un match esclusivo.",
		image: "/images/conventions/tennis2.jpeg",
		accent: "Benessere attivo",
	},
	{
		title: "Tour guidati di Pollenzo",
		description: "Esplora il borgo reale e i suoi tesori UNESCO con guide dedicate.",
		image: "/images/conventions/pollenzo.png",
		accent: "Scoperta",
	},
	{
		title: "Giri in Vespa",
		description: "Vivi le Langhe in libertà con itinerari panoramici e soste enogastronomiche.",
		image: "/images/conventions/vespa.png",
		accent: "Avventura",
	},
	{
		title: "Degustazioni private",
		description: "Accesso a cantine selezionate e tasting guidati dai produttori locali.",
		image: "/images/conventions/wine.png",
		accent: "Sapori",
	},
	{
		title: "Parcheggio interno & ascensore",
		description: "Arriva in totale comodità: posti auto riservati e ascensore diretto alle camere.",
		image: "/images/conventions/parcheggio.jpg",
		accent: "Comfort",
	},
	{
		title: "Ka' Momi Bar",
		description: "A pochi passi da LangAmore, il luogo perfetto per un aperitivo o un caffè del mattino.",
		image: "/images/conventions/bar.jpeg",
		accent: "Lifestyle",
	},
];

---

<BaseLayout title={pageMeta.title}>
	<Fragment slot="head">
		<meta name="description" content={pageMeta.description} />
		<meta property="og:url" content={pageMeta.url} />
	</Fragment>
	<main class="space-y-20 pb-20">
		<section class="section-wrapper space-y-10 text-center">
			<header class="section-header">
				<span class="chip">Servizi su misura</span>
				<h1 class="text-4xl font-semibold text-[var(--color-primary-dark)]">Tutto quello che rende unico il tuo soggiorno</h1>
				<p class="tagline mx-auto">{pageMeta.description}</p>
			</header>

			<div class="grid-auto-fit">
				{services.map((service) => (
					<article class="floating-card space-y-4 text-left">
						<div class="gradient-border">
							<img src={service.image} alt={service.title} class="w-full h-60 object-cover rounded-[22px]" loading="lazy" />
						</div>
						<span class="chip">{service.accent}</span>
						<h2 class="text-2xl font-semibold text-[var(--color-primary-dark)]">{service.title}</h2>
						<p class="text-[var(--color-muted)] leading-7">{service.description}</p>
					</article>
				))}
			</div>
		</section>

		<section class="section-wrapper text-center space-y-6">
			<h2 class="text-3xl font-semibold text-[var(--color-primary-dark)]">Scegli la tua esperienza LangAmore</h2>
			<p class="tagline mx-auto">
				Contattaci per personalizzare il tuo soggiorno tra degustazioni, tour privati e momenti di puro benessere.
			</p>
			<div class="flex justify-center gap-3 flex-wrap">
				<a
					href="https://www.booking.com/hotel/it/langamore-guest-house.it.html"
					class="btn btn-primary"
					target="_blank"
					rel="noopener"
					title="Prenota LangAmore"
				>
					Prenota ora
				</a>
				<a href="/contact" class="btn btn-outline" title="Richiedi informazioni">Richiedi informazioni</a>
			</div>
		</section>
	</main>
</BaseLayout>
