---
import BaseLayout from "../layouts/baseLayout.astro";
import Slider4Bed from "../components/slider4bed.astro";

const pageMeta = {
    title: "Locazione Turistica | LangAmore",
    description: "Un appartamento elegante e luminoso per vivere le Langhe con tutto il comfort di casa.",
    url: "https://langamorepollenzo.it/tourist-location",
};

const imagesSrc = [
    "/images/Locazione_turistica/letto.jpg",
    "/images/Locazione_turistica/divano.jpg",
    "/images/Locazione_turistica/cucina2.jpg",
    "/images/Locazione_turistica/bagno.jpg",
    "/images/Locazione_turistica/cucina.jpg",
    "/images/Locazione_turistica/bagno4.jpeg",
    "/images/Locazione_turistica/bagno5.jpeg"
];

const features = [
    "Camera matrimoniale climatizzata con cassaforte",
    "Zona living con divano letto e luce naturale",
    "Cucina completa con elettrodomestici e welcome breakfast",
    "Bagno con doccia, set cortesia e asciugacapelli",
    "Aria condizionata in tutti gli ambienti",
];

---

<BaseLayout title={pageMeta.title}>
    <Fragment slot="head">
        <meta name="description" content={pageMeta.description} />
        <meta property="og:url" content={pageMeta.url} />
    </Fragment>
    <main class="space-y-20 pb-20">
        <section class="section-wrapper space-y-8 text-center">
            <header class="section-header">
                <span class="chip">Locazione Turistica</span>
                <h1 class="text-4xl font-semibold text-[var(--color-primary-dark)]">La tua casa nel cuore delle Langhe</h1>
                <p class="tagline mx-auto">{pageMeta.description}</p>
            </header>

            <p class="tagline mx-auto max-w-3xl">
                La nostra locazione turistica offre spazi ampi, arredamento contemporaneo e servizi pensati per chi desidera immergersi nel territorio tra Langhe e Roero.
            </p>
        </section>

        <section class="section-wrapper grid gap-12 lg:grid-cols-[minmax(0,1.15fr),minmax(0,0.85fr)] items-start">
            <div class="gradient-border">
                <div class="surface-card surface-card--accent">
                    <Slider4Bed images={imagesSrc} />
                </div>
            </div>
            <div class="floating-card space-y-6">
                <h2 class="text-3xl font-semibold text-[var(--color-primary-dark)]">Tutto ciò che serve per sentirsi a casa</h2>
                <p class="text-[var(--color-muted)] leading-7">
                    Un appartamento curato in ogni dettaglio, con ambienti separati e luminosi. Perfetto per vivere le Langhe con libertà, senza rinunciare a comfort e privacy.
                </p>
                <ul class="space-y-3">
                    {features.map((feature, index) => (
                        <li class="list-step" data-index={`0${index + 1}`}>{feature}</li>
                    ))}
                </ul>
            </div>
        </section>

        <section class="section-wrapper grid-auto-fit">
            <div class="floating-card space-y-3">
                <span class="chip">Comfort</span>
                <h3 class="text-2xl font-semibold text-[var(--color-primary-dark)]">Camere confortevoli</h3>
                <p class="text-[var(--color-muted)] leading-7">
                    Spazi ampi, materiali naturali e dettagli wellness per un riposo rigenerante. Wi-Fi dedicato, smart TV e climatizzazione indipendente ti accompagnano durante il soggiorno.
                </p>
            </div>
            <div class="floating-card space-y-3">
                <span class="chip">Plus</span>
                <h3 class="text-2xl font-semibold text-[var(--color-primary-dark)]">Servizi esclusivi</h3>
                <p class="text-[var(--color-muted)] leading-7">
                    Convenzioni con partner selezionati, parcheggio interno e ascensore dedicato. Scopri tutte le possibilità <a href="/services" class="underline hover:text-[var(--color-primary)]">qui</a> e lasciati ispirare.
                </p>
            </div>
        </section>

        <section class="section-wrapper text-center space-y-6">
            <h2 class="text-3xl font-semibold text-[var(--color-primary-dark)]">Prenota la tua permanenza</h2>
            <p class="tagline mx-auto">
                Verifica la disponibilità e scegli le date ideali per vivere un'esperienza autentica a LangAmore.
            </p>
            <div class="flex flex-wrap justify-center gap-3">
                <a
                    href="https://www.booking.com/hotel/it/langamore-guest-house.it.html"
                    class="btn btn-primary"
                    target="_blank"
                    rel="noopener"
                    title="Prenota LangAmore"
                >
                    Prenota ora
                </a>
                <a href="/contact" class="btn btn-outline" title="Contattaci">Chiedi informazioni</a>
            </div>
        </section>
    </main>
</BaseLayout>
