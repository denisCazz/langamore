<!-- Navbar -->
<nav class="bg-white shadow-lg w-full fixed z-10">
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center">
            <!-- Logo -->
            <div class="flex space-x-4">
                <a href="/" class="flex items-center px-2 text-gray-700">
                    <img src="/images/logo.jpg" alt="Logo" class="h-18 w-16" />
                </a>
            </div>
            <!-- Primary Nav -->
            <div class="hidden md:flex items-center space-x-1">
                <a href="/" class="py-5 px-3 text-gray-700 hover:text-blue-900"
                    >Home</a
                >
                <a
                    href="/about"
                    class="py-5 px-3 text-gray-700 hover:text-blue-900">Noi</a
                >
                <a
                    href="/services"
                    class="py-5 px-3 text-gray-700 hover:text-blue-900"
                    >Servizi</a
                >
                <div class="relative">
                    <button
                        id="structure-btn"
                        class="py-5 px-3 text-gray-700 hover:text-blue-900 focus:outline-none"
                        >La struttura</button
                    >
                    <div
                        id="structure-menu"
                        class="absolute hidden bg-white shadow-lg w-48"
                    >
                        <a
                            href="/bedroom"
                            class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-200"
                            >Le camere</a
                        >
                        <a
                            href="/tourist-location"
                            class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-200"
                            >Locazione turistica</a
                        >
                    </div>
                </div>
                <a
                    href="/contact"
                    class="py-5 px-3 text-gray-700 hover:text-blue-900"
                    >Contatti</a
                >
            </div>
            <!-- Hamburger Icon -->
            <div class="md:hidden flex items-center">
                <button id="menu-btn" class="mobile-menu-button">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <!-- Mobile Menu -->
    <div class="hidden mobile-menu md:hidden">
        <a href="/" class="block py-2 px-4 text-sm hover:bg-gray-200">Home</a>
        <a href="/about" class="block py-2 px-4 text-sm hover:bg-gray-200"
            >Noi</a
        >
        <a href="/services" class="block py-2 px-4 text-sm hover:bg-gray-200"
            >Servizi</a
        >
        <div class="relative">
            <button
                class="block w-full text-left py-2 px-4 text-sm hover:bg-gray-200 focus:outline-none"
                >La struttura</button
            >
            <div class="hidden w-48">
                <a
                    href="/bedroom"
                    class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-200"
                    >Le camere</a
                >
                <a
                    href="/tourist-location"
                    class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-200"
                    >Locazione turistica</a
                >
            </div>
        </div>
        <a href="/contact" class="block py-2 px-4 text-sm hover:bg-gray-200"
            >Contatti</a
        >
    </div>
</nav>

<script>
    const btn = document.getElementById("menu-btn");
    const menu = document.querySelector(".mobile-menu");

    if (btn) {
        btn.addEventListener("click", () => {
            if (menu) {
                menu.classList.toggle("hidden");
            }
        });
    }

    // Dropdown menu for mobile
    const dropdownBtnMobile = document.querySelector(".mobile-menu button");
    const dropdownMenuMobile = dropdownBtnMobile
        ? dropdownBtnMobile.nextElementSibling
        : null;

    if (dropdownBtnMobile) {
        dropdownBtnMobile.addEventListener("click", () => {
            if (dropdownMenuMobile) {
                dropdownMenuMobile.classList.toggle("hidden");
            }
        });
    }
    // Dropdown menu for desktop
    const structureBtn = document.getElementById("structure-btn");
    const structureMenu = document.getElementById("structure-menu");

    if (structureBtn) {
        structureBtn.addEventListener("mouseover", () => {
            if (structureMenu) {
                structureMenu.classList.remove("hidden");
            }
        });
    }

    if (structureBtn) {
        structureBtn.addEventListener("mouseout", () => {
            if (structureMenu) {
                structureMenu.classList.add("hidden");
            }
        });
    }

    if (structureMenu) {
        structureMenu.addEventListener("mouseover", () => {
            if (structureMenu) {
                structureMenu.classList.remove("hidden");
            }
        });
    }

    if (structureMenu) {
        structureMenu.addEventListener("mouseout", () => {
            if (structureMenu) {
                structureMenu.classList.add("hidden");
            }
        });
    }
</script>
