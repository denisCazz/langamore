---
import BaseLayout from "./baseLayout.astro";
import Slider4Bed from "../components/slider4bed.astro";

const { type, maintext } = Astro.props;

let images = [
    "/images/Camera_vasca_idro/bdeddc17-8310-4e40-b568-d65afcd3ff8a.jpg",
];
let title = "Camera ";

switch (type) {
    case "matrimoniale":
        images = [
            "/images/Camera_2/ingresso.jpg",
            "/images/Camera_2/vista1.jpg",
            "/images/Camera_2/bagno.jpg",
            "/images/Camera_2/letto.jpg",
        ];
        title += "Idro | LangAmore";
        break;
    case "deluxe":
        images = [
            "/images/Camera_Deluxe/letto.jpg",
            "/images/Camera_Deluxe/bagno.jpg",
            "/images/Camera_Deluxe/entrata.jpg",
        ];
        title += "Deluxe | LangAmore";
        break;
    case "idro":
        images = [
            "/images/Camera_vasca_idro/camera.jpg",
            "/images/Camera_vasca_idro/vasca.jpg",
            "/images/Camera_vasca_idro/letto.jpg",
        ];
        title += "Matrimoniale | LangAmore";
        break;
}
---

<BaseLayout title={title}>
    <main class="space-y-20 pb-20" itemscope itemtype="http://schema.org/WebPage">
        <meta itemprop="name" content={`Camera ${type}`} />
        <meta itemprop="description" content={maintext} />

        <section class="section-wrapper space-y-6 text-center">
            <span class="chip">Camere LangAmore</span>
            <h1 class="text-4xl font-semibold text-[var(--color-primary-dark)]" itemprop="headline">
                Camera {type}
            </h1>
            <p class="tagline mx-auto">
                Comfort contemporaneo, atmosfera intima e servizi dedicati per vivere al meglio le Langhe.
            </p>
        </section>

        <section class="section-wrapper grid gap-10 lg:grid-cols-[minmax(0,1.1fr),minmax(0,0.9fr)] items-start">
            <div class="gradient-border" itemprop="image">
                <div class="surface-card surface-card--accent">
                    <Slider4Bed images={images} />
                </div>
            </div>

            <article
                class="floating-card space-y-5"
                itemprop="mainContentOfPage"
                itemscope
                itemtype="http://schema.org/WebPageElement"
            >
                <h2 class="text-3xl font-semibold text-[var(--color-primary-dark)]" itemprop="headline">
                    Cosa offre
                </h2>
                <p class="text-[var(--color-muted)] leading-7" itemprop="text">
                    {maintext}
                </p>
                <div class="flex flex-wrap gap-3">
                    <a
                        href="https://www.booking.com/hotel/it/langamore-guest-house.it.html"
                        class="btn btn-primary"
                        target="_blank"
                        rel="noopener"
                        itemprop="url"
                        title="Prenota LangAmore"
                    >Prenota ora</a>
                    <a href="/contact" class="btn btn-outline" title="Contatta LangAmore">Scrivici</a>
                </div>
            </article>
        </section>
    </main>
</BaseLayout>
